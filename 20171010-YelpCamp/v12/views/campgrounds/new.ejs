<% include ../partials/header %>
<h1 style="text-align: center;">Create a New Campground</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Campground Price per night" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"><button>Go back</button></a>
            <a href="/"><button>Home</button></a>
        </div>
   </div>
</div>
<% include ../partials/footer %>