<body>
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>        
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>
    <div id="landing-header">
        <h1>Welcome to Campgrounds Unlimited</h1>

        <form action="/campgrounds">
            <button class="btn btn-large btn-success">See Campgrounds</button>
        </form>
    </div>
    <ul class="slideshow">
        <li></li>
        <li></li>
        <li></li>
