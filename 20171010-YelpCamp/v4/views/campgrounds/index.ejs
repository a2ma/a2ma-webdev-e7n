<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to Campgrounds Unlimited</h1>
            <p>Unique experiences curated from all over the globe.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add Campground</a>
            </p>
        </div>
    </header>

<!--
    <style>
        a{
            padding: 10px;
        }
    </style>
-->
<div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds</h3>
    </div>
    <% campgrounds.forEach(function(campground){%>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%= campground.image %>" alt="">
            <div class="caption">
                <h4><%= campground["name"]%></h4>
            </div>
            <p>
                <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
    </div>
    <% });%>
</div>

    <a href="/"><button>Go back</button></a>
</div>

<% include ../partials/footer %>
