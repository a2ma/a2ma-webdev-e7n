<% include ../partials/header %>
<h1 style="text-align: center;">Edit <%= campground.name %></h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"><button>Go back</button></a>
            <a href="/"><button>Home</button></a>
        </div>
   </div>
</div>
<% include ../partials/footer %>