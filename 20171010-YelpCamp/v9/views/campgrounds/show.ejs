<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">$9/night</h4>
                    <h2><a href=""><%= campground.name %></a></h2>
                    <h4><%= campground.description %></h4>
                    <p>
                        <em>Submitted by: <%= campground.author.username %></em>
                    </p>
                    <p>
                        <a class="btn btn-lg btn-success" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a class="btn btn-success btn-lg" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                    </p>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                    </div>
                    </div>
                    <p><%= comment.text %></p>
                <% }); %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>